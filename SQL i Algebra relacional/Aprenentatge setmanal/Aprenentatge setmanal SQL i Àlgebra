values(1);

insert into empleats (num_empl)
values(1);

insert into empleats (num_empl)
values(1);

--Qüestió 3--
A=empleats(num_empl = 3)
B=empleats - A
C=A[sou]
D=C{sou->sueldo}
E=B[sou>sueldo]D
F=E[nom_empl]
